{% extends 'base.html.twig' %}

{% block title %}{{ 'articles.form_title'|trans }}{% endblock %}

{% block body %}
<section class="page-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-card-modern">
                    <div class="form-card-header">
                        <div class="form-icon">
                            <i class="fas fa-feather-alt"></i>
                        </div>
                        <h1 class="form-title">{{ 'articles.form_title'|trans }}</h1>
                        <p class="form-subtitle">{{ 'articles.empty_message'|trans }}</p>
                    </div>

                    <div class="form-card-body">
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ message }}
                            </div>
                        {% endfor %}

                        {% include 'article/_form.html.twig' %}

                        <div class="form-footer">
                            <a href="{{ path('app_article_index', {'_locale': app.request.locale}) }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i>
                                {{ 'articles.form_back_link'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
