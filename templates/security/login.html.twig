{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.sign_in'|trans }}{% endblock %}

{% block body %}
<section class="auth-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="auth-card">
                    <div class="auth-header">
                        <div class="auth-icon">
                            <i class="fas fa-sign-in-alt"></i>
                        </div>
                        <h1 class="auth-title">{{ 'auth.sign_in'|trans }}</h1>
                    </div>

                    <div class="auth-body">
                        {% if error %}
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i>
                                {{ message|trans }}
                            </div>
                        {% endfor %}

                        {% if app.user %}
                            <div class="alert alert-info mb-3">
                                {{ 'auth.logged_in_as'|trans }} {{ app.user.userIdentifier }}, 
                                <a href="{{ logout_path() }}" class="auth-link">{{ 'auth.logout_link'|trans }}</a>
                            </div>
                        {% else %}
                            <form method="post" class="auth-form">
                                <div class="form-group mb-4">
                                    <label for="inputEmail" class="form-label">
                                        <i class="fas fa-envelope"></i>
                                        {{ 'auth.email'|trans }}
                                    </label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control auth-input" autocomplete="email" required autofocus placeholder="name@amine.com">
                                </div>

                                <div class="form-group mb-4">
                                    <label for="inputPassword" class="form-label">
                                        <i class="fas fa-lock"></i>
                                        {{ 'auth.password'|trans }}
                                    </label>
                                    <input type="password" name="password" id="inputPassword" class="form-control auth-input" autocomplete="current-password" required>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="form-check mb-4">
                                    <input type="checkbox" name="_remember_me" class="form-check-input" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe" style="color: rgba(255,255,255,0.8);">
                                        {{ 'auth.remember_me'|trans }}
                                    </label>
                                </div>

                                <button class="btn btn-primary btn-auth w-100" type="submit">
                                    <i class="fas fa-sign-in-alt"></i>
                                    {{ 'auth.sign_in_button'|trans }}
                                </button>
                            </form>
                        {% endif %}

                        <div class="auth-footer">
                            <p>
                                {{ 'auth.need_account'|trans }} 
                                <a href="{{ path('app_register', {'_locale': app.request.locale}) }}" class="auth-link">
                                    {{ 'nav.register'|trans }}
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
